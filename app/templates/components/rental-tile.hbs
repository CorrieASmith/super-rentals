<li>{{rental.owner}}'s {{rental.type}} in {{rental.city}}
  {{#if isImageShowing }}
  <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  {{else}}
  <br /><button class="btn btn-info"  {{action 'imageShow'}}>Show image</button>
  {{/if}}
  {{update-rental rental=rental update="update"}}
  <button class="btn btn-danger" {{action 'delete' rental}}>Delete</button><br /> <br />
</li>
