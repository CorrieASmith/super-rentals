<li>{{cities.name}}'s {{cities.attractions}}
  {{#if isImageShowing }}
  <p><img src={{cities.image}} alt={{cities.attractions}} {{action 'imageHide'}}></p>
  {{else}}
  <br /><button class="btn btn-info" {{action 'imageShow'}}>Show image</button>
  {{/if}}
  <button class="btn btn-danger" {{action 'delete' cities}}>Delete</button><br /> <br />
</li>
