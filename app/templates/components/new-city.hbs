{{#if addNewCity}}
<h1>New City</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="attractions">Attraction</label>
      {{input value=attractions id="attractions"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button class="btn btn-success" {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-default" {{action 'cityFormShow'}}>New City</button>
{{/if}}
